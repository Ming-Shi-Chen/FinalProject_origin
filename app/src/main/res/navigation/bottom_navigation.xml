<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.finalproject_origin.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/surfingFragment"
        android:name="com.example.finalproject_origin.ui.SurfingFragment"
        android:label="fragment_surfing"
        tools:layout="@layout/fragment_surfing" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.example.finalproject_origin.ui.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_userFragment_to_registFragment"
            app:destination="@id/registFragment" />
    </fragment>
    <fragment
        android:id="@+id/registFragment"
        android:name="com.example.finalproject_origin.ui.RegistFragment"
        android:label="fragment_regist"
        tools:layout="@layout/fragment_regist" />
</navigation>